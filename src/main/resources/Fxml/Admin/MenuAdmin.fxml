<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane stylesheets="@../../Styles/DashboardAdmin.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wepower.wepower.Controllers.Admin.MenuAdminController">
   <top>
      <HBox fillHeight="false" styleClass="barraMenuAdmin" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="80.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Images/LOGO_rettangolare.png" />
               </image>
            </ImageView>
            <Button fx:id="dashboardButton" mnemonicParsing="false" styleClass="bottoneDashboardAdmin" text="Home" textAlignment="CENTER" />
            <Button fx:id="usersButton" mnemonicParsing="false" styleClass="bottoneDashboardAdmin" text="Utenti" textAlignment="CENTER" />
            <Button fx:id="schedeButton" mnemonicParsing="false" styleClass="bottoneDashboardAdmin" text="Schede" textAlignment="CENTER" />
            <Button fx:id="certificatiButton" mnemonicParsing="false" styleClass="bottoneDashboardAdmin" text="Certificati" textAlignment="CENTER" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" mnemonicParsing="false" styleClass="bottoneDashboardAdmin" text="Logout" textAlignment="CENTER" />
         </children>
      </HBox>
   </top>
</BorderPane>
