<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../../../Styles/Prenotazioni.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wepower.wepower.Controllers.Client.ClientViewsController.PrenotazioniController">
    <center>
        <HBox fillHeight="true" spacing="100" BorderPane.alignment="CENTER">
         <children>
             <ScrollPane id="scrollPrenotazione" fx:id="scrollPrenotazione" fitToWidth="true" style="-fx-padding: 0; -fx-background-color: transparent; -fx-border-insets: 0; -fx-background-insets: 0;" vbarPolicy="AS_NEEDED">
                 <content>
                 <HBox id="containerGiorniPrenotazione" fx:id="containerGiorniPrenotazione" fillHeight="false" minWidth="400.0" spacing="10" HBox.hgrow="NEVER" />
                 </content>
             </ScrollPane>
            <ScrollPane id="scrollProssimiAllenamenti" fx:id="scrollProssimiAllenamenti" fitToHeight="false" fitToWidth="true" hbarPolicy="NEVER" maxWidth="300" style="-fx-padding: 0; -fx-background-color: transparent; -fx-border-insets: 0; -fx-background-insets: 0;" vbarPolicy="AS_NEEDED">
               <content>
                  <VBox id="corpoProssimiAllenamenti" fx:id="corpoProssimiAllenamenti">
                     <children>
                        <Label id="labelProssimiAllenamenti" fx:id="labelProssimiAllenamenti" text="I tuoi prossimi allenamenti" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>

            <ScrollPane id="scrollStoricoCliente" fx:id="scrollStoricoCliente" fitToHeight="false" fitToWidth="true" hbarPolicy="NEVER" maxWidth="300" style="-fx-padding: 0; -fx-background-color: transparent; -fx-border-insets: 0; -fx-background-insets: 0;" vbarPolicy="AS_NEEDED" HBox.hgrow="ALWAYS">
               <content>
                  <VBox id="corpoStorico" fx:id="corpoStorico">
                     <children>
                        <Label id="lavelStorico" fx:id="labelStorico" text="Storico delle tue prenotazioni" />
                     </children></VBox>
               </content>
            </ScrollPane>
         </children>
        </HBox>
    </center>
   <top>
          <VBox styleClass="pane_offerte_dashboard" BorderPane.alignment="CENTER">
              <children>
                    <Label alignment="CENTER" text="Prenota il tuo allenamento">
                        <font>
                            <Font name="Arial Bold" size="30.0" />
                        </font>
                    </Label>
              </children>
          </VBox>
   </top>
   <padding>
      <Insets left="40.0" />
   </padding>
</BorderPane>
